<% provide :title, t("titles.lesson") %>
<div class="row">
  <div class="col-md-8">
    <div class="title">
      <h2><%= @lesson.category.name %></h2>
      <h4 class="count alert alert-info"></h4>
    </div>
    <%= form_for [@lesson.category, @lesson] do |f| %>
      <%= f.fields_for :word_lessons do |ff| %>
        <div class="word-list">
          <h3><%= ff.object.word.keyword %></h3>
          <%= ff.collection_radio_buttons :answer_id, ff.object.word.answers, 
                                          :id, :meaning do |rb| %>
            <%= rb.label(class: "radio"){rb.radio_button + rb.text} %>
          <% end %>
        </div>
      <% end %>
      <p><%= link_to t("buttons.next"), "", class: "btn btn-primary choose" %></p>
      <p class="alert alert-success alert-submit">If you want to submit your answer now, click here:</p>
      <%= f.submit t("buttons.submit_answer"), class: "btn btn-primary submit-answer" %>
    <% end %>
  </div>
</div>
