<% if @user.errors.any? %>
  $(".errors").html("<%= escape_javascript(render 'shared/errors', object: @user) %>")
<% else %>
  $(".profile-table").html("<%= escape_javascript(render 'shared/profile') %>")
  $(".profile-edit-form").html("<%= escape_javascript(link_to t(:lb_edit), edit_user_path(@user), class: "btn btn-primary", remote: true) %>")
  $(".errors").html("")
<% end %>
